<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaves_horizontal"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        >
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="MOTI MAHAL RESTAURANT" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:hint="Name (optional)"
            android:background="@drawable/layout_edittext"
            android:layout_below="@id/tvRestaurantName"


            />

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:hint="Mobile Number (Optional)"
            android:background="@drawable/layout_edittext"
            android:layout_below="@id/etName"


            />

        <Button
            android:id="@+id/btStartSurvey"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_below="@+id/etMobile"
            android:text="START SURVEY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ENGLISH"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_edittext"
                />

            <TextView
                android:id="@+id/tvHindi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HINDI"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_edittext"
                />


        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>