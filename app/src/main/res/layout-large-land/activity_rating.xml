<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaves_horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        >
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="MOTI MAHAL RESTAURANT" />

        <TextView
            android:id="@+id/tvRatingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Rate the Restaurant"
            android:textStyle="bold"
            android:layout_below="@+id/tvRestaurantName"
            android:textSize="40dp"/>

        <RatingBar
            android:id="@+id/rbRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRatingText"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            />

        <EditText
            android:id="@+id/etComment"
            android:layout_below="@+id/rbRating"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:padding="40dp"
            android:hint="Comments(Optional)"
            android:background="@drawable/layout_edittext"

            />

        <Button
            android:id="@+id/btStartSurvey"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/etComment"
            android:text="SUBMIT FEEDBACK" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ENGLISH"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_edittext"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HINDI"
                android:gravity="center"
                android:padding="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:background="@drawable/layout_edittext"
                />


        </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>